{
  "id": "wf_tavily_research",
  "name": "Tavily Web Research Workflow",
  "description": "A structured workflow for conducting in-depth web research using the Tavily API.",
  "steps": [
    {
      "stepId": "1",
      "agentId": "tavily-research-agent",
      "action": "receive_query",
      "description": "Receive and validate the initial research query from the user or another agent.",
      "input": {
        "query": "string"
      },
      "output": {
        "validatedQuery": "string"
      }
    },
    {
      "stepId": "2",
      "agentId": "tavily-research-agent",
      "action": "define_categories",
      "description": "Analyze the query and break it down into logical research categories.",
      "input": {
        "query": "string"
      },
      "output": {
        "categories": ["string"]
      }
    },
    {
      "stepId": "3",
      "agentId": "tavily-research-agent",
      "action": "conduct_searches",
      "description": "Perform Tavily API searches for each defined category.",
      "input": {
        "query": "string",
        "categories": ["string"]
      },
      "output": {
        "categorizedResults": "object"
      }
    },
    {
      "stepId": "4",
      "agentId": "tavily-research-agent",
      "action": "synthesize_and_summarize",
      "description": "Synthesize the search results for each category and generate summaries.",
      "input": {
        "categorizedResults": "object"
      },
      "output": {
        "categorizedSummaries": "object"
      }
    },
    {
      "stepId": "5",
      "agentId": "tavily-research-agent",
      "action": "generate_report",
      "description": "Compile the final research report in the specified JSON format.",
      "input": {
        "query": "string",
        "categorizedSummaries": "object"
      },
      "output": {
        "researchReport": "object"
      }
    }
  ]
}